<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".resume">

    <TextView
        android:id="@+id/enterResumeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Enter Resume"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/resumeEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="start|top"
        android:hint="Start typing your resume here..."
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:textSize="16sp" />

    <Button
        android:id="@+id/submitResumeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Resume" />

</LinearLayout>
